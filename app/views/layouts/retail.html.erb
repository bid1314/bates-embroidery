<!DOCTYPE html>
<html>
  <head>
    <title>Bates Embroidery - Retail Store</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
      .retail-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
      }
      .retail-nav {
        background-color: #f8f9fa;
        border-bottom: 2px solid #667eea;
      }
      .retail-footer {
        background-color: #343a40;
        color: white;
      }
    </style>
  </head>

  <body class="retail-store">
    <!-- Retail Header -->
    <header class="retail-header py-3">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-3">
            <%= link_to retail_root_path, class: "text-white text-decoration-none" do %>
              <h2 class="mb-0"><i class="fas fa-tshirt me-2"></i>Bates Embroidery</h2>
              <small>Retail Store</small>
            <% end %>
          </div>
          <div class="col-md-6">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search products...">
              <button class="btn btn-light" type="button">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
          <div class="col-md-3 text-end">
            <% if user_signed_in? %>
              <div class="dropdown">
                <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                  <i class="fas fa-user me-1"></i><%= current_user.email %>
                </button>
                <ul class="dropdown-menu">
                  <li><%= link_to "My Account", "#", class: "dropdown-item" %></li>
                  <li><%= link_to "My Orders", "#", class: "dropdown-item" %></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
                </ul>
              </div>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: "btn btn-light me-2" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-light" %>
            <% end %>
            <a href="#" class="btn btn-warning ms-2">
              <i class="fas fa-shopping-cart"></i> Cart (<span id="cart-count">0</span>)
            </a>
          </div>
        </div>
      </div>
    </header>

    <!-- Retail Navigation -->
    <nav class="retail-nav py-2">
      <div class="container">
        <ul class="nav nav-pills">
          <li class="nav-item">
            <%= link_to "Home", retail_root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "T-Shirts", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Hoodies", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Hats", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Custom Design", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Contact", "#", class: "nav-link" %>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="py-4">
      <div class="container">
        <% if notice %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= notice %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>
        
        <% if alert %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= alert %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </main>

    <!-- Retail Footer -->
    <footer class="retail-footer py-5 mt-5">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <h5>Bates Embroidery</h5>
            <p>Your trusted partner for custom embroidery, screen printing, and promotional products.</p>
          </div>
          <div class="col-md-3">
            <h6>Quick Links</h6>
            <ul class="list-unstyled">
              <li><%= link_to "About Us", "#", class: "text-light" %></li>
              <li><%= link_to "Services", "#", class: "text-light" %></li>
              <li><%= link_to "FAQ", "#", class: "text-light" %></li>
              <li><%= link_to "Contact", "#", class: "text-light" %></li>
            </ul>
          </div>
          <div class="col-md-3">
            <h6>Customer Service</h6>
            <ul class="list-unstyled">
              <li><%= link_to "Shipping Info", "#", class: "text-light" %></li>
              <li><%= link_to "Returns", "#", class: "text-light" %></li>
              <li><%= link_to "Size Guide", "#", class: "text-light" %></li>
              <li><%= link_to "Care Instructions", "#", class: "text-light" %></li>
            </ul>
          </div>
          <div class="col-md-3">
            <h6>Connect With Us</h6>
            <div class="d-flex gap-3">
              <a href="#" class="text-light"><i class="fab fa-facebook fa-2x"></i></a>
              <a href="#" class="text-light"><i class="fab fa-instagram fa-2x"></i></a>
              <a href="#" class="text-light"><i class="fab fa-twitter fa-2x"></i></a>
            </div>
            <p class="mt-3">
              <strong>Need help with B2B orders?</strong><br>
              <%= link_to "Visit our B2B Portal", "http://b2b.batesembroidery.com", class: "text-warning" %>
            </p>
          </div>
        </div>
        <hr class="my-4">
        <div class="text-center">
          <p>&copy; 2025 Bates Embroidery. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>